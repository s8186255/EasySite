
<div role="main" class="main">
  <section class="main-content-wrap">
    <div class="container">
      <div class=" main-content-full">
        <div class="row">
          <div class="col-md-2 sidebar sidebar-left">
            <aside class="block blk-categories">
              <h3>个人中心</h3>
              <ul class="list-categories">
                <li> <%= link_to "资料管理", edit_user_registration_path %></li>
                <li> <%= link_to "推广管理", referrals_path %></li>
                <li><%= link_to "密码修改", edit_user_password_path %> </li>
              </ul>
            </aside>
          </div>
          <div class="col-md-10">
            <div class="post-body">

              <div class="post-content">
                <h2>修改个人资料</h2>

                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= f.error_notification %>

                    <div class="form-inputs">

                      <%= f.input :username, label: "用户名", required: true, autofocus: true %>
                      <%= f.input :mobile, label: "电话",  autofocus: true %>
                      <%= f.input :email, label: "邮箱", required: true, autofocus: true %>

                      <%= f.input :password,label: "新密码", autocomplete: "off", required: false %>
                      <%= f.input :password_confirmation, label: "确认密码", required: false %>
                      <%= f.input :current_password, label: "原密码",required: true %>
                    </div>

                    <div class="form-actions">
                      <%= f.button :submit, "Update" %>
                    </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>



      </div>
    </div>
  </section>
</div>


