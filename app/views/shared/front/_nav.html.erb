<div class="navbar-collapse nav-main-collapse collapse">
<nav class="nav-main pull-right">
  <ul class="nav nav-pills nav-main-menu">
    <li class="dropdown <%="active" if current_page?(root_path) %>">
      <%= link_to "首页", root_path %>
    </li>

    <% get_categories.each do |category| %>
      <li class="dropdown">
        <%= link_to category.name, category_path(category.id), class: "dropdown_toggle" %>
        <% if category.children?  %>
          <ul class="dropdown-menu">
            <% category.children.each do |cat| %>
              <li><%= link_to cat.name, category_path(cat.id) %></li>
            <% end %>
          </ul>
        <% end %>
      </li>
    <% end %>

    <li class="<%="active" if current_page?(new_contact_path) %>" >
      <%= active_link_to "联系我们", new_contact_path, {}%>
    </li>
  </ul>
</nav>
</div>
