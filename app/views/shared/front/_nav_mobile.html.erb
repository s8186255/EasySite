<div id="offcanvas" class="uk-offcanvas">
<div class="uk-offcanvas-bar">
  <ul id="main-menu-offcanvas" class="uk-nav-offcanvas" data-uk-nav>
    <li class="uk-parent <%="uk-active" if current_page?(root_path) %>">
      <%= link_to "首页", root_path %>
    </li>
    <% get_categories.each do |category| %>
      <li class="uk-parent" >
        <a href="#">xxxxxx#</a>
        <% if category.children?  %>
          <ul class="uk-nav-sub">
            <% category.children.each do |cat| %>
              <li <%='class="active"' if current_page?(category_path(category.id)) %>>
                <%= link_to cat.name, category_path(cat.id) %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </li>
    <% end %>
    <li class="uk-parent <%="uk-active" if current_page?(new_contact_path) %>">
      <%= active_link_to "联系我们", new_contact_path, {}%>
    </li>
  </ul>
</div>
</div>
